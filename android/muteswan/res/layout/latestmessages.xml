<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="right"
    
    
    android:paddingTop="2sp"
    >
    
    
    
       <TextView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/android:latestmessagesprompt"
        android:layout_width="190sp" 
        android:layout_height="45sp" 
        android:text="Messages"
        android:gravity="left"
        android:maxWidth="220sp"
        android:textSize="14sp"
        android:paddingRight="30sp"
        android:textColor="#000000"
	    android:textStyle="bold"
       />
       
       
       		   
    <ImageView
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:layout_height="40sp"
    android:layout_width="40sp"
    android:id="@+id/checkingMessagesIcon"
    android:src="@drawable/refresh"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:clickable="true"
    android:paddingTop="2sp"
    android:paddingBottom="2sp"
    android:gravity="center"/>
    
   <Button android:id="@+id/latestmessagesPost"
       		   android:layout_toRightOf="@id/android:latestmessagesprompt"
       		   android:layout_toLeftOf="@id/checkingMessagesIcon"
       		   android:layout_alignParentTop="true"
       		   
    		   android:layout_width="wrap_content"
    		   android:maxWidth="10sp"
    		   android:paddingLeft="20sp"
    		   android:paddingRight="20sp"
    		   
    		   android:layout_height="wrap_content"
       		   android:text="Post"/>
   
    
    <ListView android:id="@+id/android:list"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="#ffffff"
    	android:textColor="#000000"
    	android:divider="#00000000"
    	android:dividerHeight="5sp"
    	android:footerDividersEnabled="false"
   		android:cacheColorHint="#00000000"
   		android:layout_below="@id/android:latestmessagesprompt"
    	    
    	/>
   
     
</RelativeLayout>
