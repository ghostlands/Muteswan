<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent" 
   android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
	   <include layout="@layout/titlebar" />
	    
	   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingLeft="3dp"
	    android:paddingRight="3dp">
	     
	     <TextView
	      android:id="@+id/newCirclePrompt"
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:text="@string/newcircleprompt"
	      android:textSize="14sp"
	      android:textStyle="bold" />
	    
	    <LinearLayout
	      android:orientation="horizontal"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content">
	    
	     <TextView
	      android:id="@+id/newCircleNamePrompt"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginTop="10sp"
	      android:text="Name"
	      android:minWidth="50sp"/>
	      
	       <EditText
	     android:id="@+id/newCircleName"
	     android:layout_width="180sp"
	     android:layout_height="wrap_content"
	     android:layout_weight="0.33" 
	     android:maxLength="30"
	     android:inputType="textCapSentences">
	        <requestFocus />
	    </EditText>
	     
	    </LinearLayout>
	    
	    <LinearLayout
	     android:orientation="horizontal"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content">
	    
	    <TextView android:text="Key"
	     android:id="@+id/newCircleKeyPrompt"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:visibility="gone"
	     android:minWidth="50sp" />
	    
	    <TextView  
	     android:id="@+id/newCircleKey"
	     android:layout_width="fill_parent" 
	     android:layout_height="wrap_content"
	     android:text="(new key)"
	     android:visibility="gone" />
	 
	    </LinearLayout>
	   
	   <LinearLayout
	     android:orientation="horizontal"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content">
	   
	    <TextView 
	     android:text="Server"
	     android:id="@+id/newCircleServerPrompt"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:minWidth="50sp"/>
	    
	    <EditText
	     android:id="@+id/newCircleServer"
	     android:layout_width="180sp"
	     android:layout_height="wrap_content" />
	
	   
	    
	
	   </LinearLayout>
	   
	     <LinearLayout
	     android:orientation="horizontal"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content">
	     <CheckBox 
	     		   android:id="@+id/newCircleUseHiddenNode"
	     		   android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="Use hidden server? (slower, more secure)"/>
	        
	     </LinearLayout>
	     
	     
	    <Button android:text="Create Circle" android:id="@+id/genCircleButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	    <TextView android:text="" android:id="@+id/newCircleResult" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	
	</LinearLayout>
	</LinearLayout>
</ScrollView>
