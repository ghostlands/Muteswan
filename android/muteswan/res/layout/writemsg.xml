<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <include layout="@layout/titlebar" />
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:paddingLeft="3dp"
	 android:paddingRight="3dp">
    
	   <TextView
	    android:id="@+id/android_writemsgPrompt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:text="New Post"
	    android:maxWidth="100sp"
	    android:textSize="14sp" 
	    android:textStyle="bold" />
	    
	   <Button 
	    android:id="@+id/submitMsg"
	    android:text="Send"
	    android:layout_alignParentRight="true"
	    android:textSize="12sp"
	    android:layout_width="110sp" 
	    android:layout_height="35sp" />
	    		
	    <EditText
	     android:id="@+id/newMsgText"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:inputType="textCapSentences|textMultiLine"
	     android:capitalize="sentences"
	     android:layout_below="@id/submitMsg"
	     android:maxHeight="250sp"
	     android:minLines="3" 
	     android:gravity="top" />
	       
	    <TextView 
	     android:id="@+id/newPostLabel"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_below="@id/newMsgText"
	     android:text="Select circles:" />
	       
	    <ListView 
	     android:id="@+id/android:list"
	     android:layout_below="@id/newPostLabel"
	     android:layout_width="fill_parent"
	     android:layout_height="fill_parent" />
	   
	    <!-- REMOVE SIGN MESSAGE features -->
	    <!-- <Button android:id="@+id/selectSigButton" android:text="Sign Message"
	          android:layout_width="fill_parent"
	    	  android:layout_height="wrap_content"/> -->
        
	</RelativeLayout>
</LinearLayout>
