<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/circleListEntryLayout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left">

    <RelativeLayout
        android:id="@+id/circleListInnerEntryLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingTop="12dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="12dp" 
        
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/circleListDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:src="@drawable/deletecircle"
            android:text="Delete" />
        
       <ImageView
            android:id="@+id/circleListShare"
     		android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:paddingRight="13sp"
            android:paddingLeft="13sp"
            android:text="Share"
            android:textSize="13sp" 
            android:src="@android:drawable/ic_menu_share"
            />

       <!--  <Button
            android:id="@+id/circleListShare"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:paddingRight="13sp"
            android:paddingLeft="13sp"
            android:text="Share"
            android:textSize="13sp" 
            android:textColor="#8e8e8e" /> -->

        <TextView
            android:id="@+id/android_circleListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/circleListShare"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/circleListShare"
            android:clickable="true"
            android:paddingLeft="3sp"
            android:paddingTop="4sp"
            android:text="CircleName"
            android:textColor="#000000"
            
            android:textSize="15sp"
            android:typeface="sans" />

    </RelativeLayout>

</RelativeLayout>
