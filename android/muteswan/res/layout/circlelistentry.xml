<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/circleListEntryLayout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left">

    <RelativeLayout
        android:id="@+id/circleListInnerEntryLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/simpleborder"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/android_circleListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingTop="4sp"
            android:paddingLeft="3sp"
            android:text="CircleName"
            android:textColor="#000000"
            android:textSize="18sp"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/circleListDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:src="@drawable/deletecircle"
            android:text="Delete" />

        <Button
            android:id="@+id/circleListShare"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/circleListDelete"
            android:text="Share"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>
