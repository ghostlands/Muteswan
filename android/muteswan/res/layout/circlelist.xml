<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff">
    
    <include layout="@layout/titlebar" />
    
    <RelativeLayout
     android:id="@+id/circlelistButtons"
     android:orientation="horizontal"
     android:layout_width="wrap_content"
     android:background="@drawable/blackborder"
     android:layout_height="wrap_content">
     
	    <Button
	     android:id="@+id/android:circlelistCreateCircle"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:paddingLeft="15sp"
	     android:paddingTop="15sp"
	     android:paddingRight="32sp"
	     android:paddingBottom="15sp"
     	 android:background="@drawable/blackborder"
	     android:textStyle="bold"
	     android:text="New Circle" />
	    
	    <Button
	     android:id="@+id/android:circlelistAddCircle"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignParentRight="true"
	     android:layout_alignParentLeft="false"
	     android:paddingLeft="32sp"
	     android:paddingTop="15sp"
	     android:paddingRight="15sp"
	     android:paddingBottom="15sp"
     	 android:background="@drawable/blackborder"
	     android:textStyle="bold"
	     android:text="Join Circle" />
	     
	     <TextView
	     android:id="@+id/android:circlelistAddCircleManually"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:visibility="gone"
	     android:layout_centerInParent="true"
	     android:padding="15sp"
	     android:textStyle="bold"
	     android:text="Manual Join" />
    
    </RelativeLayout>
    
    <TextView  
     android:id="@+id/android:circlelistprompt"
     android:layout_width="fill_parent" 
     android:layout_height="wrap_content"
     android:height="0dp"
     android:text="Circles"
     android:gravity="center" />
        
    <ListView android:id="@+id/android:list"
     android:divider="#ffcccccc"
     android:dividerHeight="1sp"
     android:footerDividersEnabled="false"
   	 android:cacheColorHint="#00000000"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" />
   
</LinearLayout>
