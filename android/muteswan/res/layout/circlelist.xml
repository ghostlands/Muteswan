<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"

    >
    
    
    <LinearLayout
     android:id="@+id/circlelistButtons"
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:background="#ffffffff"
    >
    
     
     
     <Button
       android:id="@+id/android:circlelistCreateCircle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="New Circle"
      
     />
    
    <Button
       android:id="@+id/android:circlelistAddCircle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Join Circle"
     />
    
    </LinearLayout>
      <TextView  
      android:id="@+id/android:circlelistprompt"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text="Circles"
      android:gravity="center"
      />
    
    
   
    
    <ListView android:id="@+id/android:list"
    	android:divider="#00000000"
    	android:dividerHeight="5sp"
    	android:footerDividersEnabled="false"
   		android:cacheColorHint="#00000000"
    	
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"/>
   
     
   
    	
    	

</LinearLayout>
