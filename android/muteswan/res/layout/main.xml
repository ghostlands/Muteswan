<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#24282b" android:gravity="top"> 
    
    
 
    
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:padding="15sp"
    
    android:id="@+id/mainLayoutTable" >
    
    <ImageView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/logoView"
    android:paddingTop="40sp"
    android:paddingBottom="40sp"
    android:src="@drawable/wordmark"
    android:gravity="bottom|center"
    android:layout_gravity="bottom"/>


    
  
   
       <ImageView android:id="@+id/mLatestMessages"
    		android:text="All Posts"
    		android:textSize="14sp"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_centerInParent="true"
 			android:gravity="center"
 			android:background="@drawable/imageborder"
 			android:layout_below="@id/logoView"
 			android:src="@drawable/posts"
    		/>
    		
    		
    		 <TextView android:id="@+id/imageSeparator" android:text="" 
    		 android:layout_below="@id/mLatestMessages"
    		 android:layout_width="wrap_content"
    		 android:layout_height="10sp"/>
    	
    	  <ImageView android:id="@+id/mManageCircles"
 			android:text="Circles"
    		android:textSize="14sp"
 			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 		    android:layout_centerInParent="true"
 			android:gravity="center"
 			android:layout_below="@id/imageSeparator"
 			android:background="@drawable/imageborder"
 			android:src="@drawable/circles"
           />
    		
   
      
   
    <TextView
     android:id="@+id/versionName"
     android:layout_width="wrap_content"
     android:layout_height="40sp"
     android:text="VERSION"
     android:textSize="12sp"
   
     android:layout_alignParentRight="true"
     android:layout_alignParentBottom="true"
     android:textColor="#ffffffff"
     android:gravity="bottom|center"
     />
   </RelativeLayout>

    
    
 
</RelativeLayout> 
