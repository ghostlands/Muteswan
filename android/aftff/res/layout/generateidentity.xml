<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
     <TextView
    android:id="@+id/newIdentityPrompt"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="Create New Identity"
    android:textSize="24sp"
    />
    
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
     <TextView
    android:id="@+id/newIdentityNamePrompt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name"
    android:minWidth="50sp"
    />
     
    <EditText android:text=""
      android:id="@+id/newIdentityName"
      android:layout_width="120sp"
      android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    
    <Button android:text="Create Identity"
    android:id="@+id/genIdentityButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="170sp"></Button>
</LinearLayout>